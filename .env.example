# Environment Configuration
ENVIRONMENT=development

# Database Configuration
POSTGRES_USER=seoman
POSTGRES_PASSWORD=seoman_dev_password_change_me
POSTGRES_DB=seoman
POSTGRES_PORT=5433

# Redis Configuration
REDIS_PASSWORD=seoman_dev_password_change_me
REDIS_PORT=6380

# Storage Configuration
# Provider: "minio" for local MinIO, "b2" for Backblaze B2
STORAGE_PROVIDER=minio

# MinIO Configuration (local development)
MINIO_ROOT_USER=seoman_admin
MINIO_ROOT_PASSWORD=seoman_minio_password_change_me
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=seoman-files
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=seoman_admin
MINIO_SECRET_KEY=seoman_minio_password_change_me
MINIO_USE_SSL=false

# Backblaze B2 Configuration (production)
# Uncomment and configure for B2 storage:
# STORAGE_PROVIDER=b2
# B2_ENDPOINT=s3.us-west-004.backblazeb2.com
# B2_KEY_ID=your-b2-application-key-id
# B2_APPLICATION_KEY=your-b2-application-key
# B2_BUCKET=your-bucket-name
# B2_REGION=us-west-004

# LLM Configuration
# Provider options: "openai", "anthropic", "local" (LM Studio)
LLM_PROVIDER=openai
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini

# OpenAI API Key (used for LLM and template classification)
OPENAI_API_KEY=sk-your-openai-api-key-here

# For local LM Studio, use:
# LLM_PROVIDER=local
# LLM_BASE_URL=http://host.docker.internal:1234/v1
# LLM_API_KEY=not-needed
# LLM_MODEL=llama-3-8b-instruct

# Authentication
JWT_SECRET=dev_jwt_secret_change_in_production_please_use_random_string

# Casdoor Configuration
CASDOOR_SERVER_PORT=8005
CASDOOR_WEB_PORT=7001
CASDOOR_ENDPOINT=http://localhost:8005
CASDOOR_JWT_SECRET=casdoor_secret_change_in_production
CASDOOR_CLIENT_ID=seoman-backend
CASDOOR_CLIENT_SECRET=seoman-backend-secret-change_me
CASDOOR_ORGANIZATION=seoman
CASDOOR_APPLICATION=seoman-app

# Google OAuth (configure in Casdoor UI)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true

# External Integrations
# Deepcrawl API (self-hosted or cloud)
DEEPCRAWL_API_URL=http://deepcrawl:8080

# DataForSEO API
DATAFORSEO_API_URL=https://api.dataforseo.com
DATAFORSEO_API_LOGIN=your-dataforseo-login
DATAFORSEO_API_PASSWORD=your-dataforseo-password

# CORS Configuration
CORS_ORIGINS=http://localhost:3011,http://seoman.yourdomain.com

# Service Ports
FRONTEND_PORT=3011
BACKEND_PORT=8000
CASTOR_PORT=8086

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_CASDOOR_ENDPOINT=http://localhost:8000
NEXT_PUBLIC_CASDOOR_CLIENT_ID=seoman-frontend
NEXT_PUBLIC_CASDOOR_APPLICATION=seoman-app

# Logging
LOG_LEVEL=DEBUG

# Monitoring (optional)
SENTRY_DSN=

# Cost Control (per tenant limits)
MAX_PAGES_PER_CRAWL=20000
MAX_KEYWORD_QUERIES_PER_MONTH=1000

# Quick SEO Analyzer Configuration
QUICK_ANALYZER_ENABLED=true
QUICK_ANALYZER_PORT=8081

# Analyzer Selection Strategy
DEFAULT_AUDIT_THRESHOLD_PAGES=1000

# python-seo-analyzer API (optional, if using custom instance)
PYTHON_SEOANALYZER_URL=http://quick-analyzer:8080
PYTHON_SEOANALYZER_TIMEOUT=30
